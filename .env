# APPLICATION SETTINGS

# Backend environment
ENV=development
# URL where your frontend is hosted
FRONTEND_URL=http://localhost:3000
# DATABASE CONFIG
# IMPORTANT: Replace values locally in your real .env (do NOT push secrets)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE_NAME
#   WHATSAPP API CONFIG
# Replace with your production credentials in your local .env
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_PHONE_ID=your_whatsapp_phone_id_here

# Meta Facebook App Secret (for webhook signature verification)
APP_SECRET=your_app_secret_here
DISABLE_SIGNATURE_VERIFICATION=true
